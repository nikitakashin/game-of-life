{
  "root": true,

  "env": {
    "browser": true,
    "node": true
  },

  "parserOptions": {
    "parser": "babel-eslint"
  },

  "extends": [
    "@nuxtjs",
    "prettier",
    "prettier/vue",
    "plugin:prettier/recommended",
    "plugin:nuxt/recommended"
  ],

  "plugins": ["prettier"],

  "rules": {
    "no-console": "off",
    "no-throw-literal": "off",
    "prefer-promise-reject-errors": "off",
    "no-unused-vars": "off",
    "vue/html-self-closing": [
      "error",
      {
        "html": { "void": "always", "normal": "any", "component": "always" },
        "svg": "always",
        "math": "always"
      }
    ]
  }
}
